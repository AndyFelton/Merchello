@using Merchello.Core
@model IEnumerable<Merchello.Web.Models.VirtualContent.IProductContent>
    

<section class="product-box-list">

    @if (Model.Any())
    {
        foreach (var row in Model.ToArray().Split(4))
        {
            <div class="row">
                @foreach (var product in row)
                {
                    <div class="col-6 col-xl-3 col-md-6 col-lg-3">
                        @Html.Partial("_ProductBox", product)
                    </div>
                }
            </div>
        }
    
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No products
        </div>
    }
</section>